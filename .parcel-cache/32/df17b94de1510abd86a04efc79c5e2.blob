
html, body {
    overflow: hidden;
    width: 100%;
    height: 100%;
    margin: 0;
    padding: 0;
    font-family: 'Segoe UI';
    scroll-behavior: smooth;
}

b {
    font-weight: 600;
}

button {
    font-family: 'Segoe UI';
    cursor: pointer;
}

#app {
    position: fixed;
    top: 60px;
    right: 0;
    bottom: 0;
    left: 0;
    width: 100%;
    height: calc(100% - 60px);
}

#render {
    position: fixed;
    top: 60px;
    right: 0;
    bottom: 0;
    left: 0;
    width: 100%;
    height: calc(100% - 60px);
    touch-action: none;
}

.full-screen-shift {
    transition: 0.5s transform;
}

.full-screen-shift-horizontal {
    transform: translateY(-100%);
}

.full-screen-shift-vertical {
    transform: translateX(320px);
}

#render:focus {
    outline: none;
}

#scene-explorer-host {
    z-index: 100;
}

.color-picker {
  display: flex;
  position: fixed;
  bottom: 16px;
  left: 50%;
  transform: translate(-50%, 0);
}

.color-picker button {
  position: relative;
  margin: 4px;
  width: 42px;
  height: 42px;
  border: 3.5px solid #ddd;
  border-radius: 50%;
}

.color-picker button[data-selected]::after {
  content: '';
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  border: 2.5px solid white;
  border-radius: 50%;
}
